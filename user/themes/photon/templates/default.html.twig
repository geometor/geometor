<!DOCTYPE html>
<html lang="en">

{% include '_site/head.html.twig' %}

  <body class="{% block body_template_classes %}{% endblock body_template_classes %}{% if page.header.body_classes %} {{ page.header.body_classes }}{% endif %}">
    {% block header -%}
    {% include '_section/header.html.twig' %}
    {%- endblock header %}

    {% block showcase %}{% endblock -%}

    {% block main -%}

    <main>
      {%- block content -%}
      {%- include '_section/_articles/article.html.twig' -%}
      {%- endblock content -%}
    </main>

    {%- endblock main %}

    {% block asides -%}
      {% include '_section/asides.html.twig' %}
    {%- endblock asides %}

    {% block footer -%}
      {% include '_section/footer.html.twig' %}
    {%- endblock footer %}

    <script type="text/x-mathjax-config">
      MathJax.Hub.Config({
        TeX: {
          extensions: ["color.js"]
        }
      })
    </script>

    {% block bottom -%}
    {{- assets.js('bottom') -}}
    {%- endblock %}

  </body>
</html>
